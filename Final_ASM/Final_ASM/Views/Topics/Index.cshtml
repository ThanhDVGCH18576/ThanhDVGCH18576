@model IEnumerable<Final_ASM.Models.Topic>

@{
    ViewBag.Title = "Index";
}

<h2>Topic Page</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create Topic", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            Trainer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Administrator.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>

            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TopicID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TopicID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TopicID })
                </td>
            }
        </tr>
    }

</table>
