@model IEnumerable<Final_ASM.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>Class Room Page</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New Room", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            Trainer Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>

            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TrainerID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TrainerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TrainerID })
                </td>
            }
        </tr>
    }

</table>
